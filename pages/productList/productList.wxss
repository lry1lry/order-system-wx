page {
	background-color: #f3f7fa;
}

.input {
	float: left;
	width: 750rpx;
	height: 80rpx;
	margin-top: 20rpx;
}

.input .input-content {
	float: left;
	width: 700rpx;
	height: 70rpx;
	margin: 5rpx 25rpx;
	border: 1px solid red;
	border-radius: 20rpx;
}

.input .product-value {
	float: left;
	width: 680rpx;
	height: 60rpx;
	margin-top: 4rpx;
	padding-left: 20rpx;
	font-size: 36rpx;
	line-height: 60rpx;
}

.content {
	float: left;
	width: 750rpx;
	background-color: white;
	margin-top: 20rpx;
	border-top-left-radius: 40rpx;
	border-top-right-radius: 40rpx;
	overflow: scroll;
}

.warn-icon {
	float: left;
	margin: 0 280rpx;
	margin-top: 100rpx;
}

.not-found {
	float: left;
	font-size: 40rpx;
	width: 750rpx;
	text-align: center;
	margin-top: 20rpx;
}

van-tabs {
	float: left;
	width: 750rpx;
}

.all-product-item {
	float: left;
	width: 750rpx;
	height: 250rpx;
	margin-top: 20rpx;
}

.all-product-item image {
	float: left;
	width: 250rpx;
	height: 250rpx;
	margin-left: 20rpx;
	border-radius: 15rpx;
}

.all-product-item .product-name {
	float: left;
	width: 460rpx;
	margin-left: 20rpx;
	font-size: 36rpx;
	line-height: 44rpx;
	word-wrap: break-word;
}

.all-product-item .product-price {
	float: left;
	height: 50rpx;
	margin-left: 20rpx;
	font-size: 40rpx;
	color: red;
	margin-top: 114rpx;
	line-height: 60rpx;
}

.all-product-item .product-price text{
	font-size: 30rpx;
}

.all-product-item .product-sale {
	float: left;
	height: 50rpx;
	margin-left: 20rpx;
	font-size: 40rpx;
	color: #777;
	margin-top: 114rpx;
	line-height: 60rpx;
}