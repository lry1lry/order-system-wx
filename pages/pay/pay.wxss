page {
	background-color: #f3f7fa;
}

.tip {
	float: left;
	width: 750rpx;
	height: 100rpx;
	background-color: rgb(233, 236, 14);
	font-size: 30rpx;
	line-height: 50rpx;
	color: red;
}

.count-down {
	float: left;
	width: 750rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	font-size: 40rpx;
	margin-top: 20rpx;
}

.canvas {
	float: left;
	width: 300px;
	height: 300px;
	background: lightgray;
	margin-left: 110rpx;
	margin-top: 80rpx;
}

.price {
	float: left;
	width: 750rpx;
	height: 50rpx;
	font-size: 30rpx;
	text-align: center;
	line-height: 50rpx;
	margin-top: 20rpx;
}

.finish-pay {
	float: left;
	width: 200rpx;
	height: 60rpx;
	border-radius: 15rpx;
	line-height: 56rpx;
	margin-left: 110rpx;
	border: 2rpx solid green;
	color: green;
	margin-top: 20rpx;
}

.cancel-order {
	float: right;
	width: 200rpx;
	height: 60rpx;
	border-radius: 15rpx;
	line-height: 56rpx;
	margin-right: 110rpx;
	border: 2rpx solid red;
	color: red;
	margin-top: 20rpx;
}

.flush-code {
	float: left;
	width: 750rpx;
	height: 50rpx;
	margin-top: 20rpx;
	text-align: center;
}

.flush-code text {
	color: rgb(219, 97, 15);
}