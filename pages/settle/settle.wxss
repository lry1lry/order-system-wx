page {
	background-color: #f3f7fa;
}

.head {
	float: left;
	width: 750rpx;
	height: 150rpx;
	background-color: white;
}

.head .location-pic {
	float: left;
	width: 30rpx;
	height: 30rpx;
	margin-top: 60rpx;
	margin-left: 40rpx;
}

.head .location-name{
	float: left;
	width: 500rpx;
	height: 150rpx;
	line-height: 150rpx;
	margin-left: 40rpx;
	font-size: 40rpx;
	font-weight: 700;
}

.content {
	float: left;
	width: 750rpx;
	background-color: white;
	margin-top: 20rpx;
	border-radius: 15rpx;
}

.content image {
	float: left;
	width: 200rpx;
	height: 200rpx;
	margin-left: 30rpx;
	margin-top: 60rpx;
	border-radius: 15rpx;
}

.content .product-name {
	float: left;
	width: 450rpx;
	height: 50rpx;
	font-size: 34rpx;
	margin-top: 60rpx;
	margin-left: 20rpx;
	line-height: 50rpx;
}

.content .product-price {
	float: left;
	margin-top: 100rpx;
	height: 50rpx;
	margin-left: 20rpx;
	line-height: 66rpx;
	font-size: 34rpx;
	color: red;
}

.content .product-price text {
	font-size: 26rpx;
}

.content .product-num {
	float: right;
	height: 50rpx;
	margin-top: 100rpx;
	font-size: 30rpx;
	line-height: 70rpx;
	margin-right: 30rpx;
}

.content .delivery {
	float: left;
	width: 750rpx;
	height: 100rpx;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
}

.content .delivery-title {
	float: left;
	height: 50rpx;
	line-height: 50rpx;
	margin-left: 30rpx;
	font-size: 34rpx;
	line-height: 50rpx;
}

.content .delivery-name {
	float: right;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 34rpx;
	margin-right: 30rpx;
}

.content .delivery-time {
	float: right;
	height: 50rpx;
	line-height: 50rpx;
	font-size: 34rpx;
	margin-top: 50rpx;
	margin-right: -167rpx;
}

.content .line {
	float: left;
	width: 690rpx;
	height: 2rpx;
	background-color: lightgray;
	margin-left: 30rpx;
}

.content view:last-child .line {
	height: 0;
}

.empty {
	float: left;
	width: 750rpx;
	height: 160rpx;
}

.bottom {
	position: fixed;
	float: left;
	width: 750rpx;
	height: 140rpx;
	background-color: white;
}

.bottom button {
	float: left;
	width: 700rpx;
	height: 80rpx;
	background-color: red;
	margin-top: 10rpx;
	margin-left: 25rpx;
	border-radius: 40rpx;
	color: white;
	font-size: 30rpx;
}