page {
	background-color:#f3f7fa;
}

.head {
	float: left;
	width: 750rpx;
	height: 90rpx;
	background-color: #ff5307;
}

.head .search {
	float: left;
	width: 740rpx;
	height: 76rpx;
	background-color: #fff;
	margin: 8rpx 6rpx;
	border-radius: 10rpx;
}

.head .search icon {
	float: left;
	margin-top: 22rpx;
	margin-left: 320rpx;
}

.head .search .search-text {
	float: right;
	color: #777;
	line-height: 76rpx;
	margin-right: 320rpx;
	font-size: 30rpx;
}

.swiper {
	width: 750rpx;
	height: 350rpx;
}

.swiper image {
	float: left;
	width: 750rpx;
	height: 350rpx;
}

.big-type {
	float: left;
	width: 750rpx;
	margin-top: 92rpx;
}

.big-type image {
	float: left;
	width: 150rpx;
	height: 160rpx;
	margin-top: 20rpx;
}

.big-type image:nth-child(n + 6) {
	margin-top: 10rpx;
}

.hot-title {
	float: left;
	width: 750rpx;
	height: 90rpx;
	margin-top: 10rpx;
	background-color: #f3f7fa;
	line-height: 90rpx;
	font-weight: 700;
	font-size: 36rpx;
	padding-left: 20rpx;
	color: #000;
}

.hot-item {
	float: left;
	width: 348rpx;
	height: 468rpx;
	background-color: #fff;
	border-radius: 20rpx;
	overflow: hidden;
}

.hot-item:nth-child(2n + 5) {
	margin-left: 18rpx;
	margin-right: 9rpx;
}

.hot-item:nth-child(2n + 6) {
	margin-left: 9rpx;
	margin-right: 18rpx;
}

.hot-item:nth-child(n + 7) {
	margin-top: 18rpx;
}

.hot-item image {
	float: left;
	width: 348rpx;
	height: 348rpx;
}

.hot-item .product-name {
	float: left;
	width: 360rpx;
	height: 50rpx;
	font-size: 32rpx;
	padding-left: 20rpx;
}

.hot-item .product-price {
	float: left;
	height: 50rpx;
	font-size: 32rpx;
	padding-left: 20rpx;
	color: red;
}

.hot-item .product-price text {
	font-size: 24rpx;
}

.hot-item .sale {
	float: left;
	height: 50rpx;
	font-size: 32rpx;
	padding-left: 20rpx;
	color: gray;
}