.head-pic {
	float: left;
	width: 750rpx;
	height: 600rpx;
}

.product-price {
	float: left;
	height: 50rpx;
	font-size: 40rpx;
	padding-left: 20rpx;
	color: red;
	font-weight: 700;
	margin-top: 20rpx;
}

.product-price text {
	font-size: 26rpx;
	font-weight: 700;
}

.product-title {
	float: left;
	width: 750rpx;
	padding: 0 20rpx;
	font-size: 36rpx;
	font-weight: 700;
	margin-top: 20rpx;
}

van-cell {
	float: left;
	width: 750rpx;
	margin-top: 20rpx;
}

van-cell:nth-child(n + 5) {
	margin-top: 0;
}

.cell-title {
	font-size: 30rpx;
}

.product-intro {
	float: left;
	width: 750rpx;
	height: 100rpx;
	font-size: 30rpx;
	padding-left: 20rpx;
	line-height: 100rpx;
	font-weight: 700;
}

.poster {
	float: left;
	width: 750rpx;
	height: 1500rpx;
}

.popup-head {
	float: left;
	width: 750rpx;
	height: 300rpx;
	margin-top: 100rpx;
}

.popup-head image {
	float: left;
	width: 300rpx;
	height: 300rpx;
	margin-left: 50rpx;
	border-radius: 15rpx;
}

.popup-head .product-price-popup {
	float: left;
	font-size: 44rpx;
	color: red;
	margin-top: 256rpx;
}

.popup-head .product-price-popup text {
	float: left;
	margin-left: 20rpx;
	font-size: 30rpx;
	margin-top: 14rpx;
}

.popup-name {
	float: left;
	width: 750rpx;
	padding-left: 50rpx;
	font-size: 36rpx;
	margin-top: 50rpx;
}

.popup-name text {
	float: right;
	padding-right: 50rpx;
}

.popup-num {
	float: left;
	width: 750rpx;
	padding-left: 50rpx;
	font-size: 36rpx;
	margin-top: 50rpx;
}

.popup-num van-stepper {
	float: right;
	padding-right: 50rpx;
}

.confirm-button {
	float: left;
	width: 650rpx;
	height: 80rpx;
	font-size: 36rpx;
	background-color: red;
	color: white;
	margin-left: 50rpx;
	margin-top: 50rpx;
	line-height: 80rpx;
}

.address {
	float: left;
	width: 600rpx;
}

.empty {
	float: left;
	width: 750rpx;
	height: 150rpx;
}