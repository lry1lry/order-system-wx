page {
	background-color: #f3f7fa;
}

.order-status {
	float: left;
	width: 750rpx;
	height: 100rpx;
	background-color: white;
	font-size: 40rpx;
	line-height: 100rpx;
	text-align: center;
}

.order-item {
	float: left;
	width: 750rpx;
	height: 250rpx;
	background-color: white;
	margin-top: 20rpx;
	border-radius: 15rpx;
}

.order-item image{
	float: left;
	width: 200rpx;
	height: 200rpx;
	margin: 25rpx;
	border-radius: 15rpx;
}

.order-item .product-name {
	float: left;
	width: 500rpx;
	height: 50rpx;
	margin-top: 25rpx;
	font-size: 30rpx;
	line-height: 30rpx;
}

.order-item button {
	float: left;
	width: 150rpx;
	height: 40rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	margin-top: 10rpx;
	background-color: red;
	color: white;
	border-radius: 20rpx;
}

.order-item .product-price {
	float: left;
	height: 50rpx;
	margin-top: 100rpx;
	font-size: 30rpx;
	line-height: 70rpx;
	color: red;
}

.order-item .product-num {
	float: right;
	height: 50rpx;
	margin-top: 100rpx;
	margin-right: 25rpx;
	font-size: 30rpx;
	line-height: 70rpx;
	color: #777;
}

.order-detail {
	float: left;
	width: 750rpx;
	background-color: white;
	border-radius: 15rpx;
	margin-top: 20rpx;
}

.order-detail .order-detail-item {
	float: left;
	width: 750rpx;
}

.order-detail .order-detail-item .order-detail-item-title{
	float: left;
	margin-top: 25rpx;
	margin-left: 25rpx;
	color: #888;
	font-size: 30rpx;
}

.order-detail .order-detail-item .order-detail-item-price{
	float: right;
	margin-top: 19rpx;
	margin-right: 25rpx;
	font-size: 36rpx;
}

.order-detail .order-detail-item .order-detail-item-price text{
	font-size: 30rpx;
}

.order-detail .order-detail-item .order-detail-item-text{
	float: left;
	margin-top: 25rpx;
	margin-left: 50rpx;
	font-size: 30rpx;
}

.order-num {
	width: 520rpx;
	word-wrap: break-word;
}

.order-detail .order-detail-item:last-child {
	margin-bottom: 25rpx
}