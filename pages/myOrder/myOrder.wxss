page {
	background-color: #f3f7fa;
}

.order-item {
	float: left;
	width: 750rpx;
	height: 290rpx;
	background-color: white;
	margin-top: 20rpx;
	border-radius: 15rpx;
}

.order-item .order-id {
	float: left;
	width: 700rpx;
	height: 50rpx;
	margin-top: 20rpx;
	margin-left: 25rpx;
	font-size: 30rpx;
}

.order-item image {
	float: left;
	width: 200rpx;
	height: 200rpx;
	margin-left: 25rpx;
	border-radius: 15rpx;
}

.order-item .product-name {
	float: left;
	height: 200rpx;
	font-size: 40rpx;
	line-height: 200rpx;
	margin-left: 20rpx;
}

.order-item .order-status {
	float: right;
	margin-right: 25rpx;
	font-size: 30rpx;
	height: 200rpx;
	line-height: 370rpx;
}